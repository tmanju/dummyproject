<map:constraint-mappings xsi:schemaLocation="http://jboss.org/xml/ns/javax/validation/mapping http://www.jboss.org/xml/ns/javax/validation/mapping/validation-mapping-1.0.xsd" xmlns:map="http://jboss.org/xml/ns/javax/validation/mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <map:default-package>com.thirdpillar.codify.jsf</map:default-package>
    <map:bean class="DealSearchBean$SearchSearchFormBean" ignore-annotations="false">
    <map:class>
    
    	<!-- Common -->
    	<!-- start -->
    	     <map:constraint annotation="com.thirdpillar.foundation.validation.MvelConstraint">
	             <map:message>{deal.productType.length.message}</map:message>
	             <map:element name="matchedExpr"><![CDATA[if(o.productType==null) { return true;} else {  if(o.productType.length()<=10){return true;}else {return false;}}]]></map:element>
	         </map:constraint>
    	     <map:constraint annotation="com.thirdpillar.foundation.validation.MvelConstraint">
	             <map:message>{deal.facilityBE.customer.refNumber.length.message}</map:message>
	             <map:element name="matchedExpr"><![CDATA[if(o.facilityBECustomerRefNumber==null) { return true;} else {  if(o.facilityBECustomerRefNumber.length()<=20){return true;}else {return false;}}]]></map:element>
	         </map:constraint>
    	     <map:constraint annotation="com.thirdpillar.foundation.validation.MvelConstraint">
	             <map:message>{deal.facilityBE.customer.legalName.length.message}</map:message>
	             <map:element name="matchedExpr"><![CDATA[if(o.facilityBECustomerLegalName==null) { return true;} else {  if(o.facilityBECustomerLegalName.length()<=25){return true;}else {return false;}}]]></map:element>
	         </map:constraint>
    	     <map:constraint annotation="com.thirdpillar.foundation.validation.MvelConstraint">
	             <map:message>{deal.capitalProvider.legalName.length.message}</map:message>
	             <map:element name="matchedExpr"><![CDATA[if(o.fundAllocatorsCapitalProviderCustomerAssociatedLegalName==null) { return true;} else {  if(o.fundAllocatorsCapitalProviderCustomerAssociatedLegalName.length()<=25){return true;}else {return false;}}]]></map:element>
	         </map:constraint>
      </map:class>
    </map:bean>
</map:constraint-mappings>
