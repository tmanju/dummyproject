<?xml version="1.0"?>
<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd" xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1">
	<id>seed</id>
	<formats>
		<format>zip</format>
	</formats>
	<baseDirectory>${project.artifactId}-seed</baseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib/</outputDirectory>
			<scope>runtime</scope>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/src/main/scripts/seed</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.bat</include>
				<include>*.sh</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/main/resources/seed</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>export_operations.xml</include>
				<include>import_operations.xml</include>
				<include>data/**</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/classes</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>database.properties</include>
				<include>log4j.xml</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>
