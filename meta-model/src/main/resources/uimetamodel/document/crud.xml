<?xml version="1.0" encoding="UTF-8"?>
<canvas id="document" type="crud"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.thirdpillar.com/codify/ui-metamodel ui-metamodel.xsd"
	xmlns="http://www.thirdpillar.com/codify/ui-metamodel">
	<tabs>
		<tab id="generatedDocument" label="Document Detail">
			<panel id="document.docGroupCatType" label="Document Details">
				<field name="generatedDocument.documentName" />
				<field name="generatedDocument.documentClass" label="Document Group"
					targetFields="document.docGroupCatType,document.options,document.documentRelatedTo" />
				<field name="generatedDocument.documentCategory" label="Document Category"
					targetFields="document.docGroupCatType,document.options,document.documentRelatedTo" />
				<field name="generatedDocument.documentType" label="Document Type"
					targetFields="document.docGroupCatType,document.options,document.documentRelatedTo" />
				<field name="generatedDocument.documentStatus" />
				<field name="generatedDocument.description" />
				<field name="generatedDocument.autoDocId" label="Template ID" />
			</panel>
			<data-table name="generatedDocument.documentSigners" row="documentSigner"
				label="Signers">
				<columns>
					<column name="documentSigner.name" label="Signer" />
					<column name="documentSigner.signerType" label="Signer Type" />
					<column name="documentSigner.signerRefId" label="Signer Ref Id" />
					<column name="documentSigner.docSignedFlag" label="Signature Completed" />
					<column name="documentSigner.signedDttm" label="Signed On" />
				</columns>
			</data-table>
			<panel id="document.options">
				<field name="generatedDocument.readOnly" />
				<field name="generatedDocument.blankDocument" />
				<field name="generatedDocument.esignatureRqd" label="E-Signature"
					targetFields="generatedDocument.readOnly" />
				<field name="generatedDocument.coverSheetFlag" />
				<field name="generatedDocument.metaInfo.createdByUser" label="Generated By" />
				<field name="generatedDocument.wetSignature" label="Override with Wet Signature?" />
				<field name="generatedDocument.description" label="Description" />
			</panel>
			<panel id="document.documentRelatedTo">
				<field name="generatedDocument.documentRelatedTo" type="OneRadio"
					targetFields="document.documentRelatedTo" />
				<section id="documentSelection" cols="2" orientation="horizontal">
					<field name="generatedDocument.associatedCustomers" label="Party" />
					<!-- <field name="generatedDocument.associatedFacilities" label="Facility" /> -->
				</section>
				<!-- <field name="generatedDocument.requestLevel" label="Application 
					Level Document" /> <field name="generatedDocument.associatedFacilities" label="Product 
					Level Document" /> <field name="generatedDocument.associatedCustomers" label="Customer" 
					/> -->
			</panel>
			<data-table name="generatedDocument.versions" row="generatedVersion"
				label="Document History">
				<columns>
					<column name="generatedVersion.documentName" label="Filename" />
					<column name="generatedVersion.uploadedStream" label="File" />
					<column name="generatedVersion.versionNumber" label="Version" />
					<column name="generatedVersion.documentClass" label="Group" />
					<column name="generatedVersion.documentCategory" label="Category" />
					<column name="generatedVersion.documentType" label="Type" />
					<column name="generatedVersion.uploadDttm" label="Generated Date and Time" />
					<column name="generatedVersion.uploadedStreamBy" label="Generated By" />
					<column name="generatedVersion.relatedTo" />
					<column name="generatedVersion.documentStatus" />
					<column name="generatedVersion.description" label="Description" />
				</columns>
			</data-table>
		</tab>
	</tabs>
	<commands>
		<command id="Archive_Document" name="Archive" action="ArchiveDocumentEvent"
			type="businessOp" />
		<command id="Generate_Document" name="Generate" action="GenerateDocument"
			type="businessOp">
			<dialog-canvas>
				<section label="Generate Document Fields" id="Generate_Doc_Fields">
					<field name="generatedDocument.documentClass" label="Document Group"
						targetFields="Generate_Doc_Fields" />
					<field name="generatedDocument.documentCategory" label="Document Category"
						targetFields="Generate_Doc_Fields" />
					<field name="generatedDocument.documentType" label="Document Type"
						targetFields="Generate_Doc_Fields" />
					<field name="generatedDocument.documentStatus" />
					<field name="generatedDocument.description" />

					<field name="generatedDocument.readOnly" />

				</section>
			</dialog-canvas>
		</command>
	</commands>
	<beans>
		<bean name="document" type="com.thirdpillar.codify.loanpath.model.Document" />
	</beans>
</canvas>
